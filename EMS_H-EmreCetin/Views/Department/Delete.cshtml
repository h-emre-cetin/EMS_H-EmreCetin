@model EMS_H_EmreCetin.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this department?</h4>
    @if (Model.Employees != null && Model.Employees.Any())
    {
        <p class="mb-0">
            <strong>Warning:</strong> This department has @Model.Employees.Count
            employee(s). You cannot delete a department that has employees assigned to it.
        </p>
    }
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Total Employees</dt>
            <dd class="col-sm-9">@(Model.Employees?.Count ?? 0)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger"
            @(Model.Employees != null && Model.Employees.Any() ? "disabled" : "") />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>